function [F, g, h] = compute_function(theta, x, y)
    
   [N, M] = size(x);
   e = length(theta);
   
   % calculate F(theta) for given datset
   F = 0;
   for i = 1:N
       F = F + log(1 + exp(-y(i) * x(i, :) * theta));
   end
   
   % compute gradient of F
   f = x * theta;
   a = y' * f;
   g = exp(a);
   b = 1 + g;
   b = 1./b;
   c = -b .* y;
   g = x' * c;
       
   % compute Hessian of F
   f = x * theta;
   a = y' * f;
   g = exp(a);
   b = 1 + g;
end