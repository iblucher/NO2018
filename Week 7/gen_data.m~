function [x, y] = gen_data(theta, r)
    x = [ones(r) randn(r, 20);
        
    
    
    %MDMA data generation
m=50;   %amount of datapoints
n=20;   %dimension of data
x=randn([m n]);
x1=[ones(m,1) x];
theta=ones(n+1,1);
epsilon=randn(m,1);
sig=1;   %noiseparameter
y=sign(x1*theta + sig*epsilon);
data=[x y];

end